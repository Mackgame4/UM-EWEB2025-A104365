extends layout

block content
  .w3-card-4
    header.w3-container
      h1 Students List
        a.w3-btn(href="/alunos/registo") +

    .w3-container
      table.w3-table-all
        thead
          tr
            th Id
            th Name
            th GitLink
            th Actions
        tbody
          each aluno in alunos
            tr
              td= aluno._id
              td 
                a(href=`/alunos/${aluno._id}`) #{aluno.nome}
              td
                a(href=`${aluno.gitlink}`) #{aluno.gitlink}
              td
                | [ 
                a(href=`/alunos/edit/${aluno._id}`) Edit
                | ] [ 
                a(href=`/alunos/delete/${aluno._id}` onclick="return confirm('Tem a certeza que quer apagar?')") Apagar
                | ]

    footer.w3-container
      h5 Generated by RPCW2023 in #{data}