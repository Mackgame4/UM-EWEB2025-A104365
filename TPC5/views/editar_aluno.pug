extends layout

block content
  .w3-card-4
    header.w3-container.w3-orange
      h2 Edit Student
    
    form.w3-container(method="POST")
      fieldset
        legend Metadata
        label(for="id") Id
        input.w3-input.w3-round(type="text" name="_id" value=aluno._id readonly required)
        
        label(for="nome") Name
        input.w3-input.w3-round(type="text" name="nome" value=aluno.nome required)
        
        label(for="gitlink") Git
        input.w3-input.w3-round(type="text" name="gitlink" value=aluno.gitlink required)
      
      fieldset
        legend TPC
        each val in [1,2,3,4,5,6,7,8]
          input.w3-check(type="checkbox" name=`tpc${val}` value="1" checked=(aluno[`tpc${val}`] === true))
          label(for=`tpc${val}`) TPC#{val}
      
      br
      button.w3-btn.w3-orange(type="submit") Edit
    
    footer.w3-container.w3-orange
      h5 Generated by EngWeb2025 in #{data}
      a(href="/alunos") Return to List
